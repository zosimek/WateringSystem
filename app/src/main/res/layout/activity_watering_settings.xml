<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_green">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/calistoga"
        android:text="@string/watering_settings"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCommitSettings"
        android:layout_width="280dp"
        android:layout_height="73dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_rounded"
        android:foregroundTint="@color/theme_green"
        android:text="@string/save_changes"
        android:textColor="#444444"
        android:textSize="20sp"
        android:fontFamily="@font/calistoga"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutIntervalMax"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/watering_interval"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="@font/calistoga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="370dp"
        android:layout_height="78dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/zfbzdfb"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/plant_name"
            android:textSize="18sp"
            android:fontFamily="@font/calistoga"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="158dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPlantName"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_textview"
            android:hint="name"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="148dp" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="10dp"
            android:text=""
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="370dp"
        android:layout_height="78dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/water_amount"
            android:textSize="18sp"
            android:fontFamily="@font/calistoga"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="422dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtWaterAmount"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/rounded_textview"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:hint="in [ml]"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="412dp" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="10dp"
            android:text="ml"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="370dp"
        android:layout_height="78dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/watering_mode"
            android:textSize="18sp"
            android:fontFamily="@font/calistoga"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="246dp" />

        <Spinner
            android:id="@+id/spinnerMode"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/rounded_textview"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:textSize="18sp"
            style="@style/WateringSettingsMode"
            android:dropDownWidth="match_parent"
            android:duplicateParentState="true" >
        </Spinner>

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="10dp"
            android:text=""
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/imgInfo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/mode_info" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="370dp"
        android:layout_height="78dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <TextView
            android:id="@+id/lblIntervalMin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/min"
            android:textSize="18sp"
            android:fontFamily="@font/calistoga"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="594dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtMinInterval"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_textview"
            android:hint="min days apart"
            android:paddingLeft="20dp"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="584dp" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="10dp"
            android:text="days"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="370dp"
        android:layout_height="78dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/calistoga"
            android:text="@string/moisture_threshold"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="334dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtThreshold"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/rounded_textview"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:hint="in [%]"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="324dp" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="10dp"
            android:text="%"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutIntervalMax"
        android:layout_width="370dp"
        android:layout_height="78dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:id="@+id/lblIntervalMax"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/max"
            android:textSize="18sp"
            android:fontFamily="@font/calistoga"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="682dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtMaxInterval"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/rounded_textview"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:hint="max days apart"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="672dp" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="10dp"
            android:text="days"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>